<section class="students-show-container">
  <div class="jumbotron">
    <div class="container">
      <h1>Student</h1>
    </div>
  </div>

  <div class="container">
    <% if notice %>
      <div class="alert alert-success" role="alert">
        <span class="sr-only">Success:</span>
        <%= notice %>
      </div>
    <% end %>

    <table class="table table-responsive">
      <tbody>
        <tr>
          <td><b>#</b></td>
          <td><%= @student.id %></td>
        </tr>

        <tr>
          <td><b>Name</b></td>
          <td><%= @student.name %></td>
        </tr>

        <tr>
          <td><b>Register Number</b></td>
          <td><%= @student.register_number %></td>
        </tr>

        <tr>
          <td><b>Status</b></td>
          <td><%= @student.status %></td>
        </tr>
      </tbody>
    </table>

    <%= link_to 'Back', students_path, class: ['btn', 'btn-default', 'pull-left'] %>
    <%= link_to 'Home', root_path(), class: ['btn', 'btn-primary', 'pull-right'] %>
    <%= link_to 'Edit', edit_student_path(@student), class: ['btn', 'btn-default', 'pull-right'] %>
  </div>
</section>
