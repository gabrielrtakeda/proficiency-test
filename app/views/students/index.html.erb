<section class="students-index-container"
  ng-controller="StudentsIndexController as studentsIndexController">
  <div class="jumbotron">
    <div class="container">
      <h1>Listing students</h1>
    </div>
  </div>

  <div class="container">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Register Number</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.id %></td>
            <td><%= student.name %></td>
            <td><%= student.register_number %></td>
            <td><%= student.status %></td>
            <td><%= link_to 'Show', student %></td>
            <td><%= link_to 'Edit', edit_student_path(student) %></td>
            <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Back', root_path, class: ['btn', 'btn-default', 'pull-left'] %>
    <%= content_tag(:a, 'New Student',
      class: ['btn', 'btn-primary', 'pull-right'],
      type: 'text',
      href: new_student_path
    ) %>
  </div>
</section>
