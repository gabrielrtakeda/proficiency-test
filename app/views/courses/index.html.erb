<section class="courses-index-container"
  ng-controller="CoursesIndexController as coursesIndexController">
  <div class="jumbotron">
    <div class="container">
      <h1>Listing Courses</h1>
    </div>
  </div>

  <div class="container">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Regiter Number</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.id %></td>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= course.status %></td>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Back', root_path, class: ['btn', 'btn-default', 'pull-left'] %>
    <%= content_tag(:a, 'New Course',
      class: ['btn', 'btn-primary', 'pull-right'],
      type: 'text',
      href: new_course_path
    ) %>
  </div>
</section>
