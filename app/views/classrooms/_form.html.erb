<%= simple_form_for @classroom, :html => {:role => 'form', :"data-toggle" => 'validator'} do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= label_tag(:student_id, "Student") %>
    <%= f.select(:student_id,
      options_from_collection_for_select(@students, 'id', 'name', :selected => @classroom.student_id),
      { :include_blank => true },
      { :class => 'form-control', :required => 'required' },
    ) %>
    <span class="help-block with-errors"></span>
  </div>

  <div class="form-group">
    <%= label_tag(:course_id, "Course") %>
    <%= f.select(:course_id,
      options_from_collection_for_select(@courses, 'id', 'name', :selected => @classroom.course_id),
      { :include_blank => true },
      { :class => 'form-control', :required => 'required' }
    ) %>
    <span class="help-block with-errors"></span>
  </div>

  <div class="form-group">
    <%= label_tag(:entry_at, "Entry At") %>
    <%= f.text_field :entry_at,
      class: ['form-control'],
      id: 'entry_at',
      maxlength: '45',
      placeholder: 'YYYY-mm-dd HH:ii:ss',
      pattern: "^\d{4}\-\d{2}\-\d{2}\s\d{2}\:\d{2}\:\d{2}$",
      required: 'required'
    %>
    <span class="help-block with-errors"></span>
  </div>

  <%= f.button :submit, class: ['btn-primary', 'pull-right'] %>
<% end %>
