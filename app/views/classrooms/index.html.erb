<section class="classrooms-index-container"
  ng-controller="ClassroomsIndexController as classroomsIndexController">
  <div class="jumbotron">
    <div class="container">
      <h1>Listing classrooms</h1>
    </div>
  </div>

  <div class="container">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Regiter Number</th>
          <th>Course</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @classrooms.each do |classroom| %>
          <tr>
            <td><%= classroom.id %></td>
            <td><%= classroom.student.name %></td>
            <td><%= classroom.student.register_number %></td>
            <td><%= classroom.course.name %></td>
            <td><%= classroom.course.description %></td>
            <td><%= link_to 'Show', classroom %></td>
            <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
            <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Back', root_path, class: ['btn', 'btn-default', 'pull-left'] %>
    <%= content_tag(:a, 'New Classroom',
      class: ['btn', 'btn-primary', 'pull-right'],
      type: 'text',
      href: new_classroom_path
    ) %>
  </div>
</section>
